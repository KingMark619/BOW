/* pages/news/index.wxss */
.head-wrapper {
  padding: 10px;
}
.swiper {
  height: 250px;
  width: 100%;
}
.slide-image {
  width: 100%;
  height: 100%
}
.logo-block {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
}
.logo {
  width: 50%;
  height: auto;
  margin: auto;
}
.title {
  font-size: 30px;
  font-weight: 500;
  color: black;
  letter-spacing: 1.2px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: flex;
  margin-bottom: 5px;
}
.sub-title {
  color: lightgray;
  font-size: 16px;
  letter-spacing: 0.8px;
  font-weight: 300;
  line-height: 12px;
  margin-left: 10px;
  text-align: left;
  display: block;
  margin-bottom: 10px;
  padding-left: 5px;
}
.price {
  display: block;
  text-align: left;
  font-size: 28px;
  font-weight: 500;
  color: #ff4c4c;
}