.scroll {
  height: 140px;
  overflow: scroll;
}
@keyframes fadeOut {
  100% {
    opacity: 0;
    visibility: hidden;
  }
}
.input-block {
  width: 100%;
  margin: auto;
  margin-top: 70px;
}
.input {
  width: 90%;
  height: 40px;
  border-radius: 12px;
  margin: auto;
  padding: 0 15px;
  border: 1px solid #f7f7f7;
}
.placeholder {
  font-size: 12px;
  color: gray;
  letter-spacing: 0.2px;
}
.slider-block {
  width: 100%;
  height: auto;
  margin: 15px 0%;
  margin-top: 80px;
}
.swiper {
  height: 270px;
  width: 97%;
  margin: auto;
  border-radius: 5px;
  box-shadow: 0px 0px 8px lightgray;
}
.swiper-item,
.swiper-image {
  height: 100%;
  width: 100%;
  border-radius: 5px;
}
.travel-poster {
  height: auto;
  margin: auto;
  width: 97%;
  margin-bottom: -30px;
}
.service-card {
  width: 97%;
  margin: auto;
  margin-bottom: 15px;
}
.icon-block {
  width: 97%;
  height: auto;
  margin: auto;
  margin-top: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
  box-shadow: 0px 0px 8px lightgray;
}
.row {
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.icon {
  display: flex;
  flex-direction: column;
  height: 64px;
  width: 25%;
}
.plus-icon {
  width: 40px;
  height: 40px;
  z-index: 3;
  position: fixed;
  bottom: 3%;
  right: 5%;
}
.one {
  order: 1;
  margin-left: -4%;
}
.two {
  order: 2
}
.three {
  order: 3;
}
.four {
  order: 4;
}
.icon-image {
  width: 32px;
  height: 32px;
  margin: auto;
}
.icon-text {
  font-size: 11px;
  color: black;
  text-align: center;
  letter-spacing: -0.2px;
}
.hot-resto {
  margin: auto;
  margin-top: 15px;
}
.title-row {
  display: block;
  margin: 15px 0;
}
.title {
  font-size: 20px;
  font-weight: 500;
  color: black;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: flex;
  white-space: nowrap;
  overflow-x: hidden;
}
.title:before, .title:after {
  border-top: 2px solid #ff4c4c;
  content: '';
  display: table-cell;
  position: relative;
  top: 0.7em;
  width: 45%;
}

.title:before {
  right: 3%;
}

.title:after {
  left: 3%;
}

.blockoa {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  margin: auto;
  margin-top: 10px;
  margin-bottom: 10px;
  box-sizing: border-box;
  box-shadow: 0px 0px 8px lightgray;
  transition: transform 500ms;
  border-radius: 5px;
  overflow-y: hidden;
}
.blockoa:active {
  transform: scale(0.95);
  box-shadow: unset;
}
.topoa {
  height: auto;
}
.bottomoa {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 5px 5px 5px;
  height: 43px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.posteroa {
  /* border-top-left-radius: 5px;
  border-top-right-radius: 5px; */
  border-radius: 5px;
  height: 125px;
  width: 100%;
}
.nameoa {
  font-size: 15px;
  font-weight: 700;
  color: black;
  margin-top: -20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  text-align: center;
}
.priceoa {
  font-size: 12px;
  font-weight: 400;
  color: red;
  margin-top: -5px;
}
.top-blockoa {
  width: 45%;
  margin: auto;
  height: auto;
}
.first-rowoa {
  margin-bottom: 70px;
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
